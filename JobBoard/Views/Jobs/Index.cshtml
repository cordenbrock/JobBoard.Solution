@using JobBoard.Models;

@{
  Layout = "_layout";
}

<p><a href="/">Main Page</a></p>
<form action="/jobs/delete" method="post">
  <button type="submit">Delete all jobs</button>
</form>

<h1>Job Openings</h1>

@if (@Model.Count == 0)
{
  <h3>No jobs have been posted yet!</h3>
}

@foreach (Job job in Model)
{
  <div>
    <p>@job.Title</p>
    <p>[job description]</p>
    <p>[contact info]</p>
  </div>
}
